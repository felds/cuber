<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script>
                ;(function () {
                    const forms = document.querySelectorAll('form')

                    for (let form of forms) {
                        form.noValidate = true
                    }
                })()
            </script>
        {% endblock %}
    </body>
</html>
